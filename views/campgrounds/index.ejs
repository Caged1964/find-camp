<%layout('layouts/boilerplate')%>
  <div class="container text-center">
    <h1>All Campgrounds</h1>
  </div>
  <% for(let campground of campgrounds){ %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if (campground.images.length) { %>
            <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= campground.images[0].url %>">
            <% } else { %>
              <img crossorigin="anonymous" class="img-fluid" alt=""
                src="https://res.cloudinary.com/dhnofmntc/image/upload/v1698237128/xtpgbtvqxytztsiksqvl.jpg">
              <% } %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%=campground.title %>
            </h5>
            <p class="card-text">
              <%=campground.description%>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%=campground.location%>
              </small>
            </p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Details</a>
          </div>
        </div>
      </div>
    </div>
    <% } %>